<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SavedCardFragment">
    <com.nomad.customview.NMGTextView
        android:id="@+id/txtSavedCard"
        android:text="@string/saved_cards"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/colorBlackText"
        app:fontName="nomad_font_bold.ttf"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView

        android:layout_below="@+id/txtSavedCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/_70sdp"
        android:id="@+id/recyclerSavedCard">

    </android.support.v7.widget.RecyclerView>
    <com.nomad.customview.NMGButton
        android:id="@+id/btnPay"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_black_button"
        android:text="pay $180"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13sdp"
        app:fontName = "nomad_font_bold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
</layout>