<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            tools:context=".fragment.AddNewCardFragment">

            <com.nomad.customview.NMGTextView
                android:id="@+id/txtCardNumber"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_height="wrap_content"
                android:text="@string/card_number"
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorBlackText"
                app:fontName="nomad_font_bold.ttf"
                />
            <com.nomad.customview.NMGEditText
                android:id="@+id/edtCardNumber"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlackText"
                android:textCursorDrawable="@null"
                app:fontName="nomad_font_medium.ttf"
                android:maxLines="1"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:background="@drawable/bordered_edittext_round_corner"/>

            <com.nomad.customview.NMGTextView
                android:id="@+id/txtNameOnCard"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_height="wrap_content"
                android:text="@string/name_on_card"
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorBlackText"
                app:fontName="nomad_font_bold.ttf"
                />
            <com.nomad.customview.NMGEditText
                android:id="@+id/edtNameOnCard"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlackText"
                android:textCursorDrawable="@null"
                app:fontName="nomad_font_medium.ttf"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:background="@drawable/bordered_edittext_round_corner"/>

            <com.nomad.customview.NMGTextView
                android:id="@+id/txtExpiryDate"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_height="wrap_content"
                android:text="@string/expiry_date"
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorBlackText"
                app:fontName="nomad_font_bold.ttf"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">
                <com.nomad.customview.NMGEditText
                    android:id="@+id/edtExpiryMonth"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="MM"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/colorBlack"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorBlackText"
                    android:textCursorDrawable="@null"
                    app:fontName="nomad_font_medium.ttf"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:background="@drawable/bordered_edittext_round_corner"/>

                <com.nomad.customview.NMGEditText
                    android:id="@+id/edtExpiryYear"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="YYYY"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/colorBlack"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorBlackText"
                    android:textCursorDrawable="@null"
                    app:fontName="nomad_font_medium.ttf"
                    android:maxLines="1"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:background="@drawable/bordered_edittext_round_corner"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinnerExpiryMonth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    />

                <Spinner
                    android:id="@+id/spinnerExpiryYear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    />
            </LinearLayout>

            <com.nomad.customview.NMGTextView
                android:id="@+id/txtCvv"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_height="wrap_content"
                android:text="@string/cvv"
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorBlackText"
                app:fontName="nomad_font_bold.ttf"
                />
            <com.nomad.customview.NMGEditText
                android:id="@+id/edtCvv"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlackText"
                android:textCursorDrawable="@null"
                app:fontName="nomad_font_medium.ttf"
                android:maxLines="1"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:background="@drawable/bordered_edittext_round_corner"/>

            <com.nomad.customview.NMGButton
                android:id="@+id/btnPay"
                android:background="@drawable/round_corner_black_button"
                android:text="pay $180"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp"
                app:fontName = "nomad_font_bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />
        </LinearLayout>





    </ScrollView>

</layout>