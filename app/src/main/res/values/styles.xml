<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryB</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimaryB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryB</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_layer_list</item>
        <item name="colorPrimary">@color/colorPrimaryB</item>
        <item name="colorPrimaryDark">@color/colorPrimaryB</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NavigationDrawerTheme">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="AppTheme.NoActionBar.LightEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/colorWhiteBorder</item>
        <item name="colorControlNormal">@color/colorWhiteBorder</item>
        <item name="colorControlActivated">@color/colorWhiteBorder</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlackLabel</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

